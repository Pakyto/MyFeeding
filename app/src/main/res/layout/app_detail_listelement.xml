<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageProduct"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="90dp"
            android:layout_height="90dp"
           />

        <TextView
            android:id="@+id/nameProduct"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/barCode"
            android:textColor="#1063df"
            android:text="nomeProdotto"/>

        <TextView
            android:id="@+id/genericName"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:text="genericName"
            android:layout_alignLeft="@+id/nameProduct"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameProduct"/>

        <TextView
            android:id="@+id/barCode"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:text="BARCODE"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>