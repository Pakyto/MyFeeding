<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/firsRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ingredientsImage"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp" />

        <RelativeLayout
            android:id="@+id/secondRelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@id/ingredientsImage">

            <LinearLayout
                android:id="@+id/firsLinear"
                android:background="@drawable/customborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lista ingredienti: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_Ingredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/list"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondLinear"
                android:layout_marginTop="10dp"
                android:layout_below="@id/firsLinear"
                android:background="@drawable/customborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sostanze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sostanze o prodotti che causano allergie o intolleranze: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_Sostanze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdLinear"
                android:layout_marginTop="10dp"
                android:layout_below="@id/secondLinear"
                android:background="@drawable/customborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/additivi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additivi: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_Additivi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourLinear"
                android:layout_marginTop="10dp"
                android:layout_below="@id/thirdLinear"
                android:background="@drawable/customborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/olio_palma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredienti derivanti dall'olio di palma: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_Olio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fiveLinear"
                android:layout_marginTop="10dp"
                android:layout_below="@id/fourLinear"
                android:background="@drawable/customborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/traces"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tracce: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/traces_List"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>