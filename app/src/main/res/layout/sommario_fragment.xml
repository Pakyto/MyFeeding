<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_marginTop="40dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/nutriScore"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/imgProduct"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="60dp" />

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:id="@+id/container"
            android:layout_below="@id/nutriScore"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

            <TextView
                android:id="@+id/titleProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="NOME PRODOTTO"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/genericNameProduct"
                android:layout_below="@+id/titleProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="GENERIC NAME"
                android:textSize="14dp"
                />


            <View
                android:id="@+id/separator"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/genericNameProduct"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/titleBarcode"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Codice a barre:"
                android:textSize="12dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/valueBarcode"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/titleBarcode"
                android:layout_alignBaseline="@+id/titleBarcode"
                android:text="VALUE"/>

            <TextView
                android:id="@+id/titleQuantity"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/titleBarcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="QuantitÃ :"
                android:textSize="12dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/valueQuantity"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/titleQuantity"
                android:layout_alignBaseline="@+id/titleQuantity"
                android:text="VALUE"/>

            <TextView
                android:id="@+id/titleBrands"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/titleQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Marche:"
                android:textSize="12dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/valueBrands"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/titleBrands"
                android:layout_alignBaseline="@+id/titleBrands"
                android:text="VALUE"/>
        </RelativeLayout>



    </RelativeLayout>


</android.support.constraint.ConstraintLayout>